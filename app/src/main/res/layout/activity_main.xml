<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omkar.rainforest.MainActivity">


    <EditText
        android:id="@+id/x_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="@string/enter_hint"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/y_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_info"
        android:layout_width="366dp"
        android:layout_height="249dp"
        android:layout_marginTop="260dp"
        android:padding="16dp"
        android:paddingBottom="50dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>

    <EditText
        android:id="@+id/y_edittext"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/enter_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x_edittext" />

    <TextView
        android:id="@+id/X_View"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="@string/latitude"
        android:textSize="24sp"

        app:layout_constraintEnd_toStartOf="@+id/x_edittext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/Y_view"
        android:layout_width="122dp"
        android:layout_height="35dp"
        android:layout_marginBottom="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:text="@string/longitude"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/weather_info"
        app:layout_constraintEnd_toStartOf="@+id/y_edittext"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:text="@string/go_button"
        app:layout_constraintStart_toEndOf="@+id/Y_view"
        app:layout_constraintTop_toBottomOf="@+id/y_edittext"
        android:layout_marginLeft="15dp"
        android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>